<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos App with Nodejs</title>
    <link rel="stylesheet" href="css/todo.css">
</head>

<body>
    <%- include('partials/header.ejs') %>
    <main>
        <form action="" id="task_form" method="post">
            <input type="text" name="new_task" value="" placeholder="Enter new task" required>
            <button>Add Task</button>
        </form>
        <section class="todo-list">
            <ul>
                <% todos.forEach((todo, i) =>{ %>
                <li id="<%= todo._id %>" class="<%= (todo.done) ? 'done':'' %>"><%= todo.text%> 
                    <span id="<%= '_'+todo._id %>"  class="close">x</span></li>
                <%})%>
            </ul>
        </section>
    </main>

</body>
<script src="js/todo.js"></script>
</html>